		<servlet-class>com.jerry.servletContext.ServletContextDemo6</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletContextDemo6</servlet-name>
		<url-pattern>/ServletContextDemo6</url-pattern>
