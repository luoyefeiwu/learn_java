		<servlet-name>servletDemo2</servlet-name>
		<url-pattern>/demo2</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>servletDemo3</servlet-name>
		<servlet-class>com.jerry.servlet.ServletDemo3</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servletDemo3</servlet-name>
		<url-pattern>/demo3</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletConfigDemo1</servlet-name>
		<servlet-class>com.jerry.servletConfig.ServletConfigDemo1</servlet-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GBK</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletConfigDemo1</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletContextDemo1</servlet-name>
		<servlet-class>com.jerry.servletContext.ServletContextDemo1</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletContextDemo1</servlet-name>
		<url-pattern>/ServletContextDemo1</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletContextDemo2</servlet-name>
		<servlet-class>com.jerry.servletContext.ServletContextDemo2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletContextDemo2</servlet-name>
		<url-pattern>/ServletContextDemo2</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletContextDemo3</servlet-name>
		<servlet-class>com.jerry.servletContext.ServletContextDemo3</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletContextDemo3</servlet-name>
